generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ServiceRequest {
  id          String   @id @default(cuid())
  name        String
  service     String
  city        String
  address     String
  contact     String    // phone or WhatsApp
  description String?
  createdAt   DateTime @default(now())
}

model Provider {
  id        String   @id @default(cuid())
  name      String
  service   String
  city      String
  contact   String
  email     String?
  website   String?
  whatsapp  String?
  createdAt DateTime @default(now())
}
